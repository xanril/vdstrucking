@model IEnumerable<VDSTrucking.Models.Particular>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.ParticularItem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticularItem.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ParticularID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ParticularID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ParticularID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
